{
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "short_name": "dafilms",
  "author": "bartholomej",
  "default_locale": "en",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "host_permissions": [
    "https://www.csfd.cz/"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://*.dafilms.cz/*",
        "https://*.dafilms.com/*"
      ],
      "css": [
        "app.css"
      ],
      "js": [
        "app.bundle.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "manifest_version": 3
}